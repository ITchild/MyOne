<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fei.myone.mvp.view.MainActivity">

    <FrameLayout
        android:id="@+id/main_dis_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/tableTopGray">
        </View>
        <RadioGroup
            android:id="@+id/main_tabGroup_rg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Home_buttom_hight"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>
            <RadioButton
                android:id="@+id/main_one_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:checked="true"
                android:button="@drawable/one_selector"/>
            <View
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>
            <RadioButton
                android:id="@+id/main_all_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@drawable/all_selector" />
            <View
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>
            <RadioButton
                android:id="@+id/main_me_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:button="@drawable/me_selector"/>
            <View
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"></View>
        </RadioGroup>
    </LinearLayout>
</RelativeLayout>
