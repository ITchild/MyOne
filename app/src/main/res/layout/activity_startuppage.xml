<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/write"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/startUp_disTop_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/opening_title_image"/>

        <ImageView
            android:id="@+id/startUp_disBottom_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/opening_friday"/>

    </LinearLayout>

    <TextView
        android:id="@+id/startUp_disBottom_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/startUpButtomText"
        android:gravity="right"
        android:layout_marginRight="@dimen/margin_10dip"
        android:layout_marginBottom="@dimen/margin_10dip"
        android:text="地球历"
        />

</RelativeLayout>