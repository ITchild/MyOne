<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/item_oneList_Article_ll"
    android:background="@color/write"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/oneListArticle_type_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10dip"
        android:textColor="@color/startUpButtomText"
        android:textSize="@dimen/oneTitle_location_size"
        tool:text="-连载-"/>

    <TextView
        android:id="@+id/oneListArticle_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_10dip"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:textSize="@dimen/tv_15sp"
        tool:text="七月长安"/>

    <TextView
        android:id="@+id/oneListArticle_author_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_marginTop="@dimen/margin_10dip"
        android:textColor="@color/startUpButtomText"
        android:textSize="@dimen/oneTitle_location_size"
        tool:text="摄影/Aarah Mark" />

    <LinearLayout
        android:id="@+id/oneListArticle_author_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/oneListArticle_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_margin="@dimen/margin_10dip"
            android:src="@mipmap/default_update_img"/>
        <TextView
            android:id="@+id/oneListArticle_con_tv"
            android:layout_margin="@dimen/margin_20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_15sp"
            tool:text="hafhksjdfhuishgkfjhgusdfgkskfujsakunhejknsjniasfjsijffsklmdjflsinjfknjksdjnfjksndf"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/oneListArticle_authorMoive_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dip"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_200dip"
            android:background="@mipmap/feeds_movie"
            android:layout_marginRight="@dimen/margin_10dip"
            android:layout_marginLeft="@dimen/margin_10dip"
            android:paddingBottom="@dimen/margin_20dip"
            android:paddingTop="@dimen/margin_20dip">
            <ImageView
                android:id="@+id/oneListArticleMoive_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/default_update_img"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/oneListArticle_conMoive_tv"
            android:layout_marginTop="@dimen/margin_20dip"
            android:layout_marginLeft="@dimen/margin_20dip"
            android:layout_marginRight="@dimen/margin_20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_15sp"
            tool:text="hafhksjdfhuishgkfjhgusdfgkskfujsakunhejknsjniasfjsijffsklmdjflsinjfknjksdjnfjksndf"
            />

        <TextView
            android:id="@+id/oneListArticle_conAuthor_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/startUpButtomText"
            android:layout_marginBottom="@dimen/margin_20dip"
            android:gravity="right"
            android:textSize="@dimen/tv_15sp"
            tool:text="--《头号玩家》"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_marginRight="@dimen/margin_10dip"
        android:layout_marginBottom="@dimen/margin_10dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/oneListArticle_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/oneTitle_2_size"
            android:textColor="@color/startUpButtomText"
            android:layout_marginLeft="@dimen/margin_2dip"
            tool:text="今天"/>
        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1"></View>

        <ImageView
            android:id="@+id/oneListArticle_laud_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/feeds_laud_default"/>
        <TextView
            android:id="@+id/oneListArticle_laud_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/startUpButtomText"
            android:textSize="@dimen/margin_8dip"
            android:layout_marginRight="@dimen/margin_20dip"
            android:text="4321"/>

        <ImageView
            android:id="@+id/oneListArticle_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/feeds_share"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_4dip"
        android:background="@color/tableTopGray"></View>

</LinearLayout>