<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/item_oneList_takePhoto_ll"
    android:background="@color/write"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/oneListTakePhoto_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/default_update_img"/>

    <TextView
        android:id="@+id/oneListTakePhoto_author_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_20dip"
        android:textColor="@color/startUpButtomText"
        android:textSize="@dimen/oneTitle_location_size"
        tool:text="摄影|Aarah Mark" />

    <TextView
        android:id="@+id/oneListTakePhoto_con_tv"
        android:layout_margin="@dimen/margin_20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/tv_15sp"
        tool:text="hafhksjdfhuishgkfjhgusdfgkskfujsakunhejknsjniasfjsijffsklmdjflsinjfknjksdjnfjksndf"
        />

    <TextView
        android:id="@+id/oneListTakePhoto_conAuthor_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_20dip"
        android:textColor="@color/startUpButtomText"
        android:textSize="@dimen/tv_15sp"
        tool:text="七月长安"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10dip"
        android:layout_marginRight="@dimen/margin_10dip"
        android:layout_marginBottom="@dimen/margin_10dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/oneListTakePhoto_discovery_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/discovery"/>
        <TextView
            android:id="@+id/oneListTakePhoto_discovery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/oneTitle_2_size"
            android:textColor="@color/startUpButtomText"
            android:layout_marginLeft="@dimen/margin_2dip"
            android:text="发现"/>
        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_weight="1"></View>

        <ImageView
            android:id="@+id/oneListTakePhoto_diary_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dip"
            android:src="@mipmap/diary_icon"/>
        <ImageView
            android:id="@+id/oneListTakePhoto_facourite_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dip"
            android:src="@mipmap/favourite_gray"/>
        <ImageView
            android:id="@+id/oneListTakePhoto_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20dip"
            android:src="@mipmap/feeds_share"/>

        <ImageView
            android:id="@+id/oneListTakePhoto_laud_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/feeds_laud_default"/>
        <TextView
            android:id="@+id/oneListTakePhoto_laud_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/startUpButtomText"
            android:textSize="@dimen/margin_8dip"
            android:text="4321"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_4dip"
        android:background="@color/tableTopGray"></View>

</LinearLayout>